<UserControl x:Class="OnlineVideoLinks.WPF.UserControls.KeyButtonInstruction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OnlineVideoLinks.WPF.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="200">
    <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                HorizontalAlignment="Right" Margin="5,0,5,0">
        <Image Name="imgKey" Width="48" Height="48" VerticalAlignment="Center" />
        <TextBlock VerticalAlignment="Center" FontSize="18">/</TextBlock>
        <Image Name="imgButton" Width="48" Height="48" VerticalAlignment="Center" />
        <TextBlock Name="txtLabel" Margin="5,0,0,0" VerticalAlignment="Center" FontSize="18">Play Video</TextBlock>
    </StackPanel>
</UserControl>
